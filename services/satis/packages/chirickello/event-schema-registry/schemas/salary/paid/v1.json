{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "title": "salary.paid.v1",
  "description": "json schema for salary paid event (version 1)",
  "type": "object",
  "properties": {
    "id": {
      "type": "string",
      "format": "uuid"
    },
    "event": {
      "type": "string",
      "enum": ["salary.paid"]
    },
    "version": {
      "type": "integer",
      "enum": [1],
      "default": 1
    },
    "time": {
      "type": "string",
      "format": "date-time"
    },
    "producer": {
      "type": "string"
    },
    "data": {
      "type": "object",
      "properties": {
        "userId": {
          "type": "string",
          "format": "uuid"
        },
        "amount": {
          "type": "integer",
          "minimum": 0,
          "exclusiveMinimum": true
        },
        "paymentTime": {
          "type": "string",
          "format": "date-time"
        }
      },
      "required": ["userId", "amount", "paymentTime"]
    }
  },
  "required": ["id", "event", "time", "producer", "data"]
}
