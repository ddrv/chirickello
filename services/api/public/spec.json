{
  "openapi": "3.0.0",
  "info": {
    "title": "Chirickello",
    "version": "1.0.0"
  },
  "servers": [
    {"url": "/api/v1"}
  ],
  "paths": {
    "/version": {
      "get": {
        "security": [
          {
            "oauth2": ["tasks"]
          }
        ],
        "responses": {
          "200": {
            "description": "OK"
          }
        }
      }
    }
  },
  "components": {
    "securitySchemes": {
      "oauth2": {
        "type": "oauth2",
        "flows": {
          "authorizationCode": {
            "authorizationUrl": "http://localhost:8089/oauth/v2/authorize",
            "tokenUrl": "http://localhost:8089/oauth/v2/token",
            "scopes": {
              "tasks": "Manage tasks",
              "analytics": "View Analytics"
            }
          }
        }
      }
    }
  }
}